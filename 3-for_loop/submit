from turtle import *

speed(10)
var = 20 # how many squares in a grid

for num in range(0, 4):  #creates initial cube
    forward(30 * var)
    left(90)

right(90) #intializes turtle
for num in range(0, 2): #will run for both sides of the grid
    left(90)
    for num in range(0, var - 1): #creates grid
        penup()
        forward(30)
        left(90)
        pendown()
        forward(30 * var)
        penup()
        backward(30 * var)
        right(90)
    penup()
    forward(30)
    pendown
done()

