from turtle import * # first challenge
speed(0)
for x in range(0, 4):
    left(90)
    forward(50)
    left(90)
    forward(50)
    left(90)
    forward(5)
    left(90)
    forward(45)
    rt(90)
    fd(40)
    rt(90)
    fd(45)
    lt(90)
    fd(5)
    lt(90)
    fd(50)
    lt(90)
    
from turtle import * #Second Challenge
