from turtle import * #Third Challenge
speed(5)
for x in range(0, 4):
    for x in range(0, 4):
        fd(25)
        lt(90)
        fd(25)
        lt(90)
        fd(25)
        rt(90)
    pu()
    rt(90)
    fd(25)
    lt(90)
    fd(25)
    lt(90)
    pd()

from turtle import * #Fourth Challenge
